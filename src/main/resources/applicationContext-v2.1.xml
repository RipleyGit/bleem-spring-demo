<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"  
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/util 
	http://www.springframework.org/schema/util/spring-util-3.2.xsd
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">
	
	
	
	<context:component-scan base-package="dao,service,controller,tx"/>
	
	<!--切面的对象 -->
	<bean id="txAspect" class="aspect.TestAspect"></bean>
	
	<!--配置切面  -->
	<aop:config>
		<!--定义切入点
			within(包名.类名)
		  -->
		<aop:pointcut expression="within(service..*)" id="pc"/>
	
		<aop:aspect ref="txAspect">
			<!--配置通知   method 方法名称  -->
			<aop:around method="around" pointcut-ref="pc"/>
			<aop:after-throwing method="afterThrow" pointcut-ref="pc" throwing="throwable"/>
		</aop:aspect>
	</aop:config>
	
	
	
	
	
	
	
	
	
	
	
	
</beans>